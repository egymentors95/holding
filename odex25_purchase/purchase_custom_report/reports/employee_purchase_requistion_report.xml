                                            <td>
                                                <t t-esc="line.request_id.department_id.name"/>
                                            </td>
                                            <td>
                                                <t t-esc="line.request_id.employee_id.name"/>
                                            </td>
                                            <td>
                                                <t t-esc="line.request_id.state"/>
                                            </td>
                                            <td>
                                                <t t-esc="line.product_id.name"/>
                                            </td>
                                            <td>
                                                <t t-esc="line.qty"/>
                                            </td>
                                            <td>
                                                <t t-esc="line.sum_total"/>
                                            </td>
                                        </tr>

                                    </t>
                                    <tr style="background-color: #07b8ad; color: #ffffff;">
                                        <td colspan="7">Total</td>
                                        <td>
                                            <t t-esc="qty_total"/>
                                        </td><td>
                                            <t t-esc="amount_total"/>
                                        </td>
                                    </tr>
                                    <t t-set="qty_total" t-value="0"/>
<!--                                    <t t-set="count" t-value="1"/>-->
                                    <t t-set="amount_total" t-value="0"/>

                                </tbody>
                            </table>
