    <data>
        <template id="employee_purchase_report2" name="Purchase Requistion Report">
            <t t-call="web.html_container">
                <t t-call="web.internal_layout">

                    <style type="text/css">
                        @font-face {
                        font-family: 'GE_SS_Unique_Bold';
                        src: local('GE_SS_Unique_Bold.otf'), local('GE_SS_Unique_Bold.otf'),
                        url('/purchase_custom_report/static/fonts/GE_SS_Unique_Bold.otf') format('truetype');
                        }@font-face {
                        font-family: 'ae_AlMohanad';
                        src: local('ae_AlMohanad.ttf'), local('ae_AlMohanad.ttf'),
                        url('/purchase_custom_report/static/fonts/ae_AlMohanad.ttf') format('truetype');
                        }
                        .page{
                        font-family: Times New Roman;;
                        }
                        table{
                        width :100%;
                        border : 1px solid black;
                        border-collapse : collapse;
                        font-size : 13pt;

                        }
                        th{
                        border : 1px solid black;
                        background-color: #07b8ad; color: #ffffff;
                        text-align : center;
                        padding : 5px;
                        }
                        td{
                        border : 1px solid black;
                        text-align : center;
                        padding : 3px;
                        }
                        .cr_t{
                        text-align : center;
                        }

                    </style>
                    <div class="page" size="A4">
                        <t t-if="datas['type'] == 'total'">
                            <center>
                                <h3>Purchase Reuistion Total</h3>
                                <table>
                                    <tr>
                                        <th rowspan="2" style="verical-align :center">Group By</th>
                                        <th colspan="2">Period</th>

                                    </tr>
                                    <tr>
                                        <th>From</th>
                                        <th>To</th>
                                    </tr>
                                    <tr>
                                        <td>
                                            <t t-esc="'Employee'"/>
                                        </td>
                                        <td>
                                            <t t-esc="datas['date_from']"/>
                                        </td>
                                        <td>
                                            <t t-esc="datas['date_to']"/>
                                        </td>
                                    </tr>
                                </table>
                            </center><br/><br/>
                            <t t-set="count" t-value="1"/>
                            <t t-set="qty_total" t-value="0"/>
                            <t t-set="amount_total" t-value="0"/>
                            <t t-set="amount_price" t-value="0"/>
                            <t t-set="amount_prices" t-value="0"/>
