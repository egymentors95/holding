                                    <th>PR NO.</th>
                                    <th>Department</th>
                                    <th>Employee</th>
                                    <th>State</th>
                                    <th>Amount</th>
                                </tr>
                                <!-- </thead> -->
                                <tbody>
                                    <t t-foreach="docs" t-as="o">
                                        <t t-foreach="o.line_ids" t-as="prod">
                                            <t t-set="amount_price" t-value="amount_price+prod.sum_total"/>
                                        </t>
                                        <t t-set="amount_prices" t-value="amount_prices+amount_price"/>
                                        <tr>
                                            <td>
                                                <t t-esc="count"/>
                                            </td>
                                            <t t-set="count" t-value="count+1"/>
