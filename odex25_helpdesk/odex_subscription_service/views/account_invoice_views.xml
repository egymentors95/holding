    <record id="odex_subscription_service_vendor_form" model="ir.ui.view">
      <field name="name">odex.subscription.service.vendor.form</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.view_move_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='invoice_origin']" position="attributes">
          <attribute name="attrs">{'invisible': [('subscription_id', '!=', False)]}</attribute>
        </xpath>
        <xpath  expr="//field[@name='invoice_origin']" position="before">
          <field name="subscription_id" string="Source Document" readonly="1" attrs="{'invisible': [('subscription_id', '=', False)]}"/>
        </xpath>
      </field>
    </record>

