<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- model.name inherit form view -->
    <record id="res_config_settings_odex_subscription_service_form" model="ir.ui.view">
      <field name="name">Config Settings for Subscription Services</field>
      <field name="model">res.config.settings</field>
      <field name="priority" eval="90"/>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
           <xpath expr="//div[hasclass('settings')]" position="inside">
           <div class="app_settings_block" data-string="odex_subscription_service" string="Subscription Services" data-key="odex_subscription_service" groups="sales_team.group_sale_manager">
               <t groups="sales_team.group_sale_manager">
                <h2>Subscription Services</h2>
                <div class="row mt16 o_settings_container">
                <div class="col-12 col-lg-6 o_setting_box" title="To configure the Subscription Services">
                    <div class="o_setting_left_pane">
                    </div>
                     <div class="o_setting_right_pane">
                     <div class="text-muted">
                       Notify Days Before Subscription End
                     </div>
                     <div class="content-group">
                     <div class="row mt16">
                          <label string="Notify Days" for="days_before_end" class="col-lg-3 o_light_label"/>
                          <field name="days_before_end"/>
                     </div>
                     </div>
                     </div>
                </div>
                </div>
               </t>
           </div>
           </xpath>
      </field>
  </record>
  
</odoo>