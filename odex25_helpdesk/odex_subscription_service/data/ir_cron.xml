<odoo>
    <record id="purchase_subscription_cron" model="ir.cron">
        <field name="name">Subscription Services: Expiration</field>
        <field name="active" eval="True"/>
        <field name="state">code</field>
        <field name="interval_number">1</field>
        <field name="interval_type">weeks</field>
        <field name="numbercall">-1</field>
        <field name="model_id" ref="model_subscription_service"/>
        <field name="code">model.cron_subscription_service()</field>
        <field eval="False" name="doall"/>
        <field name="user_id" ref="base.user_root"/>
    </record>

    <record id="purchase_subscription_cron_for_invoice" model="ir.cron">
       <field name="name">Subscription Services: Generate Recurring Invoices and Payments</field>
       <field name="active" eval="True"/>
       <field name="state">code</field>
       <field name="interval_number">1</field>
       <field name="interval_type">days</field>
       <field name="numbercall">-1</field>
       <field name="model_id" ref="model_subscription_service"/>
       <field name="code">model._cron_recurring_create_invoice()</field>
       <field eval="False" name="doall"/>
       <field name="user_id" ref="base.user_root"/>
       <!-- <field name="args" eval="'()'"/> -->
    </record>

    <record id="check_fully_paid_subscription_cron" model="ir.cron">
        <field name="name">Subscription Services: Check Fully Paid</field>
        <field name="active" eval="True"/>
        <field name="state">code</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="model_id" ref="model_subscription_service"/>
        <field name="code">model.cron_check_if_fully_paid()</field>
        <field eval="False" name="doall"/>
        <field name="user_id" ref="base.user_root"/>
        <field name="priority" eval="5" />
    </record>

</odoo>
