<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_renew_membership_form" model="ir.ui.view">
            <field name="name">view.renew.membership.form</field>
            <field name="model">renew.membership</field>
            <field name="arch" type="xml">
                <form string="Membership">
                    <group>
                        <group>
                            <field name="product_id" required="1"/>
                            <field name="from_date"/>
                        </group>
                        <group>
                            <label for="duration"/>
                            <div>
                                <field name="duration" class="oe_inline" readonly="0"/>
                                <label for="duration" string="&#160;" style="margin-right: 5px;"/>
                                <field name="interval" class="oe_inline" readonly="1" style="height:24px;"/>
                            </div>
                            <field name="membership_fees" readonly="0" force_save="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Renew" name="action_renew_membership" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

    <record id="action_renew_membership" model="ir.actions.act_window">
            <field name="name">Renew Membership</field>
            <field name="res_model">renew.membership</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_renew_membership_form"/>
            <field name="target">new</field>
        </record>

</odoo>
