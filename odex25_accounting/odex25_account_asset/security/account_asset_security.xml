<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="account_asset_multi_company_rule" model="ir.rule">
        <field name="name">Account Asset multi-company</field>
        <field ref="model_account_asset" name="model_id"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
    </record>


    <record id="product_template_multi_company_rule" model="ir.rule">
        <field name="name">Product Multi-company</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
        <field name="global">False</field>
        <field name="groups" eval="[]"/>
    </record>
    <record id="model_purchase_order_multi_company_rule" model="ir.rule">
        <field name="name">Purchase Multi-company</field>
        <field name="model_id" ref="purchase.model_purchase_order"/>
        <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
        <field name="global">False</field>
        <field name="groups" eval="[]"/>
    </record>


    <record id="records_rule_partner_safe_access_customers" model="ir.rule">
        <field name="name">Partner: Company own-only access</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="domain_force">['|','|','|',('id', 'in', user.company_ids.partner_id.ids),('employee','=', True),('id','=', user.partner_id.id),('company_id', 'in', company_ids + [False])]
        </field>
        <field name="global">False</field>
        <field name="groups" eval="[]"/>
    </record>

</odoo>
