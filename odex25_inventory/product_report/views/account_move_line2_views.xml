<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_account_move_line2_tree" model="ir.ui.view">
        <field name="name">account.move.line2.tree</field>
        <field name="model">account.move.line2</field>
        <field name="arch" type="xml">
            <tree create="false" edit="false" delete="false">
                <field name="product_category"/>
                <field name="product_name"/>
                <field name="default_code"/>
                <field name="last_total_quantity"/>
                <field name="last_total_price"/>
                <field name="last_nsap"/>
                <field name="total_quantity"/>
                <field name="total_price"/>
                <field name="nsap"/>
            </tree>
        </field>
    </record>

    <record id="action_account_move_line2" model="ir.actions.act_window">
        <field name="name">ٍSales Report Views</field>
        <field name="res_model">account.move.line2</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create and manage Sales Reports Views.
            </p>
        </field>
    </record>

    <menuitem id="product_reports_view_menu" name="ٍSales Report Views"
              parent="account.menu_finance_reports" action="product_report.action_account_move_line2"
              sequence="120"/>


</odoo>