<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="sales_plan_view_form" model="ir.ui.view">
        <field name="name">sales_plan_view_form</field>
        <field name="model">sales.plan</field>
        <field name="arch" type="xml">
            <form string="sales_plan_form">
                <sheet>
                    <header>
                        <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': [('state', '=', 'confirmed')]}"/>
                        <button name="action_set_to_draft" string="Set to Draft" type="object" class="oe_highlight" attrs="{'invisible': [('state', '=', 'draft')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <div class="oe_title">
                        <h1>
                            <field name="sales_person_id" placeholder="Sales Person"/>
                        </h1>
                    </div>
                    <group>
                    <group>
                        <field name="name" invisible="1"/>

                    </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="number_of_months"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Sales Plan Lines">
                            <field name="sales_plan_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
                                    <field name="price_total"/>
                                    <field name="quantity_per_month"/>
                                    <field name="price_total_per_month"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sales_plan_view_tree" model="ir.ui.view">
        <field name="name">sales_plan_view_tree</field>
        <field name="model">sales.plan</field>
        <field name="arch" type="xml">
            <tree string="sales_plan_tree">
                <field name="sales_person_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="number_of_months"/>
            </tree>
        </field>
    </record>

    <record id="action_sales_plan" model="ir.actions.act_window">
        <field name="name">Sales Plan</field>
        <field name="res_model">sales.plan</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_sales_plan_root" name="Sales Plan" sequence="200" parent="account.menu_finance_reports"/>
    <menuitem id="menu_sales_plan" name="Sales Plan" parent="menu_sales_plan_root" action="action_sales_plan" sequence="10"/>

</odoo>