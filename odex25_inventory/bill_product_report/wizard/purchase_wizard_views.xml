<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_wizard_view_form" model="ir.ui.view">
            <field name="name">purchase.bill.wizard.view</field>
            <field name="model">purchase.bill.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from"/>
                            </group>
                            <group>
                                <field name="date_to"/>
                            </group>
                            <group>
                                <field name="product_ids" widget="many2many_tags"/>
                                <field name="vendor_ids" widget="many2many_tags"/>
                                <field name="product_category_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_view_report" type="object" string="View" class="btn-primary"/>
                        <button string="View(Report)" name="action_print_report_html" type="object" class="btn-primary"/>
                        <button string="Export Xlsx" name="action_print_report_xlsx" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="purchase_wizard_view_action" model="ir.actions.act_window">
            <field name="name">Purchase Report</field>
            <field name="res_model">purchase.bill.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
            </field>
        </record>

                <menuitem name="Purchase Report"
                  id="menu_purchase_wizard_view_action"
                  action="purchase_wizard_view_action"
                  parent="purchase.menu_procurement_management"
                  sequence="100"/>




    </data>
</odoo>