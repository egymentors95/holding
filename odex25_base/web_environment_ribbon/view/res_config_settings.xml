<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.web_environment_ribbon</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[hasclass('settings')]" position="inside">
            <div class="app_settings_block" data-string="Ribbon" id="ribbon" string="Database Ribbon" data-key="ribbon_display">
                <h2>Database Ribbon Settings</h2>
                <div class="col-12 col-lg-6 o_setting_box" id="ribbon_display">
                    <div class="o_setting_left_pane">
                        <field name="ribbon_display"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="ribbon_display" string="Display Ribbon"/>
                        <div class="text-muted mb16">
                            Activate this option if you want to display the Ribbon.
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </field>
</record>
    </data>
</odoo>