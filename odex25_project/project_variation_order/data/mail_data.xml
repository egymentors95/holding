<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="mail_template_vo_confirm" model="mail.template">
            <field name="name">Variation Order: Confirmation Email</field>
            <field name="model_id" ref="project_variation_order.model_project_variation_order"/>
            <field name="subject">${object.company_id.name} (${object.code or 'n/a' } ${object.name or 'n/a' })</field>
            <field name="email_from">${(object.project_id.user_id.email_formatted or user.email_formatted) | safe}</field>
            <field name="partner_to">${object.project_id.partner_id.id}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 12px;">
        Hello,
        <br/><br/>
        Your order <strong>${object.name}</strong> amounting in <strong>${format_amount(object.budget_amount, object.currency_id)}</strong>
       <br/>
            Thank you for your trust!
        <br/><br/>
        Do not hesitate to contact us if you have any questions.
        <br/><br/>
    </p>
</div>
    </field>
            <!-- <field name="report_template" ref="action_report_saleorder"/>
            <field name="report_name">${(object.name or '').replace('/','_')}</field> -->
            <field name="lang">${object.project_id.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>
