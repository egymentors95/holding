<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="ganttaps_view_task_form2" model="ir.ui.view">
            <field name="name">project.task.ganttaps.form.inherited</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project_native.ganttaps_view_task_form2"/>
            <field name="arch" type="xml">
               <xpath expr="//field[@name='date_finished']" position="attributes">
                    <attribute name="attrs">{'invisible':True}</attribute>
               </xpath>
               <xpath expr="//field[@name='date_start']" position="replace" />
               <xpath expr="//field[@name='date_end']" position="replace" />
           
               <xpath expr="//page[@name='gantt_view']" position="attributes">
                    <attribute name="groups">project_native_custom.group_project_native_admin</attribute>
               </xpath>
               <xpath expr="//page[@name='info_task']" position="attributes">
                    <attribute name="groups">project_native_custom.group_project_native_admin</attribute>
               </xpath>
               <xpath expr="//page[@name='info_task']" position="attributes">
                    <attribute name="groups">project_native_custom.group_project_native_admin</attribute>
               </xpath>
               <xpath expr="//page[@name='resources']" position="attributes">
                    <attribute name="attrs">{'invisible':True}</attribute>
               </xpath>
            </field>
        </record>  
        
        <record id="view_task_form2" model="ir.ui.view">
            <field name="name">project.task.form.inherited</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
               <xpath expr="//group/group[2]" position="inside">
                     <label for="date_start" string="Planned Date"/>
                        <div name="dates" class="o_row">
		                    <field name="date_start" />
		                    <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon" title="Arrow"/>
		                    <i class="fa fa-long-arrow-right mx-2 oe_read_only" aria-label="Arrow icon" title="Arrow" attrs="{'invisible': [('date_start', '=', False), ('date_end', '=', False)]}"/>
		                    <field name="date_end"/>
		                </div>  
		                <label for="duration"/>
                        <div>
                            <field name="duration" widget="time_delta" options="{'mask_humanize_field': 'duration_scale', 'mask_picker_field' : 'duration_picker'}" class="oe_inline"/>
                        </div>
                       
                </xpath>
               <xpath expr="//field[@name='date_deadline']" position="attributes">
                    <attribute name="attrs">{'invisible':True}</attribute>
               </xpath>
               <xpath expr="//field[@name='displayed_image_id']" position="after">
                <field name="color_gantt" widget="colorpicker" />
               </xpath>
            </field>
        </record>               

		<menuitem id="project_native.project_resource_menu"
					groups="project_native_custom.group_project_native_admin"
					
				/>


</odoo>
