<odoo>
    <record id="view_config_settings_form_inherit" model="ir.ui.view">
        <field name="name">view.config.settings.inherit.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project_base.view_config_settings_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='project_invoice']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="plan_by">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Plan By</span>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                              aria-label="Values set here are company-specific." groups="base.group_multi_company"
                              role="img"/>
                        <div class="text-muted">
                            Project Plan By
                        </div>
                        <div class="content-group">
                            <field name="plan_by" class="o_light_label mt16" widget="radio"/>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box" id="detailed_plan_unit">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Detailed Plan Unit</span>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                              aria-label="Values set here are company-specific." groups="base.group_multi_company"
                              role="img"/>
                        <div class="text-muted">
                            Detailed Plan Unit
                        </div>
                        <div class="content-group">
                            <field name="detailed_plan_unit" class="o_light_label mt16" widget="radio"/>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box" id="plan_by_departments">
                    <div class="o_setting_left_pane">
                        <field name="plan_by_departments"/>
                    </div>
                    <div class="o_setting_right_pane" name="plan_by_departments">
                        <label for="plan_by_departments"/>
                        <div class="text-muted">
                            Plan By Departments
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>