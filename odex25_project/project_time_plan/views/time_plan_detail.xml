<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Week Form -->
    <record id="time_plan_details_form_view" model="ir.ui.view">
        <field name="name">time.plan.details.form</field>
        <field name="model">time.plan.details</field>
        <field name="arch" type="xml">
            <form string="Week">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="date_from" required="0"/>
                            <field name="date_to" required="0"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="time_plan_details_tree_view" model="ir.ui.view">
        <field name="name">time.plan.details.tree</field>
        <field name="model">time.plan.details</field>
        <field name="arch" type="xml">
            <tree string="Week">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </tree>
        </field>
    </record>

    <record id="open_time_plan_details_action" model="ir.actions.act_window">
        <field name="name">Time Plan Details</field>
        <field name="res_model">time.plan.details</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="time_plan_details_tree_view"/>
    </record>

    <menuitem action="open_time_plan_details_action" id="menu_time_plan_details"  parent="project.menu_project_config" groups="base.group_no_one" sequence="7"/>

</odoo>